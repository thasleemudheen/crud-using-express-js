
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Information Table</title>
  <style>
    table {
      font-family: Arial, sans-serif;
      border-collapse: collapse;
      width: 80%;
      margin: 20px auto;
    }
    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    td {
      background-color: lightyellow;
    }
    th {
      background-color: gold;
    }
    h1 {
      margin-left: 40%;
    }
    button {
      padding: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>User Information Table</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Qualification</th>
      <th>Action</th>
    </tr>
    <% for (let i = 0; i < users.length; i++) { %>
      <tr>
        <td><%= users[i].name %></td>
        <td><%= users[i].age %></td>
        <td><%= users[i].phone %></td>
        <td><%= users[i].email %></td>
        <td><%= users[i].qualification %></td>
        <td>
          <button onclick="editUser('<%= users[i].id %>')">Edit</button>
          <button onclick="deleteUser('<%= users[i].id %>')">Delete</button>
        </td>
      </tr>
    <% } %>
  </table>

  <script>
    function editUser(userId) {
      window.location.href = '/edit/' + userId;
    }

    function deleteUser(userId) {
      if (confirm('Are you sure you want to delete this user?')) {
        console.log('Delete user:', userId);

        window.location.href = '/delete/' + userId;
      }
    }
  </script>
</body>
</html>